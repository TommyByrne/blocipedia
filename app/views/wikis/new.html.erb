<div class="display">
  <h1>Create New Wiki</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @wiki do |f| %>
      <div class="form-inputs">
        <%= f.input :title, label: "Title", required: true, autofocus: true %>
        <%= f.input :body, label: "Wiki Body", required: true %>
          <% if current_user.role == 'premium' %>
            <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Private wiki
          <% end %>
      </div>
    <% end %>
      <div class="form-actions">
        <%= f.button :submit, "Publish Wiki", class: 'btn btn-success' %>
      </div>
    <% end %>
    <% if current_user.role == "premium" %>
      <%= render partial: "search", locals: { wiki: @wiki } %>
    <% end %>
  </div>
</div>